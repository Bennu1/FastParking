<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:background="#F2F7F8"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/Usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="20dp"
        android:text="Usuario"
        android:textColor="#1B3764"
        android:textSize="16sp"
        app:fontFamily="@font/roboto" />

    <EditText
        android:id="@+id/UsuarioH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Ingrese su usuario"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:typeface="@font/roboto" />

    <TextView
        android:id="@+id/Pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="20dp"
        android:text="Contraseña"
        android:textColor="#1B3764"
        android:textSize="16sp"
        app:fontFamily="@font/roboto" />

    <EditText
        android:id="@+id/PassH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Ingrese su contraseña"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:typeface="@font/roboto" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Boton_login"
            android:layout_width="94dp"
            android:layout_height="36dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="20dp"
            android:background="#00A8E0"
            android:fontFamily="@font/roboto_medium"
            android:text="Entrar"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/Reg"
            android:layout_width="105dp"
            android:layout_height="36dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:background="#00A8E0"
            android:fontFamily="@font/roboto_medium"
            android:text="Registrarse"
            android:textColor="@android:color/white" />
    </GridLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_medium"
        android:text="Recuperar contraseña"
        android:textColor="#1B3764" />


    <Button
        android:id="@+id/button3"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="20dp"
        android:background="#00A8E0"
        android:drawableLeft="@drawable/face"
        android:paddingLeft="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Ingresar con facebook"
        android:textColor="@android:color/white"></Button>


</LinearLayout>